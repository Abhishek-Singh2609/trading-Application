{
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": {
          "outputDirectory": "dist"
        }
      },
      {
        "src": "dashboard/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      },
      {
        "src": "/dashboard/(.*)",
        "dest": "/dashboard/$1"
      }
    ]
  }
  